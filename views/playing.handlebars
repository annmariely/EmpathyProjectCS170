<!doctype html>

<html>
<head>
	<title>Reconnectify</title>  
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	{{> styles}}
</head>

<body>
    <div class="container">

	    {{> navbar}}
		
		<main class="mdl-layout__content">
			<div class="page-content">

				<h4>Never have I ever...</h4>

				<div class="mdl-grid">
					<div class="mdl-card mdl-shadow--4dp">
						<div class="mdl-card__title">	
							<!-- {{#each players}} 
							<span id="{{name}}"class="mdl-badge" data-badge="3">{{name}}</span>
							{{/each}}  -->
							{{#each players}}
								{{name}} <span id="{{name}}score" class="badge">5</span> 
							{{/each}}
						</div>
					</div>
				</div>

				<div id="post1" class="mdl-grid">
					<div class="mdl-card mdl-shadow--4dp">
						<div class="mdl-card__supporting-text">

							<form action="#">
								<div class="mdl-textfield mdl-js-textfield 
								mdl-textfield--floating-label">
								<input class="mdl-textfield__input" type="text" id="post1input">
								<label class="mdl-textfield__label" for="post1input">
								I have never...</label>
								</div>
							</form>
						</div>

						<a id="post1btn" class="mdl-button mdl-button--colored 
						mdl-js-button mdl-js-ripple-effect">Post</a>
					</div>
				</div> 

				<div id="gameCards"></div>
			</div>
		</main>

		<div id="template" class="mdl-grid" style="display: none;">
			<div class="mdl-card mdl-shadow--4dp">
				<div id="text" class="mdl-card__title">
				</div>

				<div class="mdl-card__actions mdl-card--border">
					<a id="answer" 
					class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
					Never!</a>
					<a id="answer" 
					class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
					Have</a>
			</div>
			</div>
			
		</div>


		{{> scripts}}
		<script src="/js/neverHave.js"></script>
	</div>
</body>
</html>
