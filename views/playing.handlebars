<!doctype html>

<html>
<head>
	<title>Reconnectify</title>  
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	{{> styles}}
</head>

<body>
    <div class="container">

	    {{> navbar}}
		
		<main class="mdl-layout__content">
			<div class="page-content">

				<h4>Never have I ever...</h4>

				<div class="mdl-grid">
					<div class="mdl-card mdl-shadow--4dp">
						<div class="mdl-card__title">
							
							{{#each players}} {{name}}{{#unless @last}},{{/unless}}
							{{/each}}
						</div>
					</div>
				</div>

				<div id="post1" class="mdl-grid">
					<div class="mdl-card mdl-shadow--4dp">
						<div class="mdl-card__supporting-text">

							<form action="#">
								<div class="mdl-textfield mdl-js-textfield 
								mdl-textfield--floating-label">
								<input class="mdl-textfield__input" type="text" id="post1input">
								<label class="mdl-textfield__label" for="post1input">
								I have never...</label>
								</div>
							</form>
						</div>

						<a id="post1btn" class="mdl-button mdl-button--colored 
						mdl-js-button mdl-js-ripple-effect">Post</a>
					</div>
				</div> 

			</div>
		</main>

		<script id="neverHave-questionCard" type="text/x-handlebars-template">
			test	
		</script>

		{{> scripts}}
		<script src="/js/neverHave.js"></script>
	</div>
</body>
</html>
